{
  "private": true,
  "name": "thurcom.li",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build && rimraf ./build/ssr-build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest"
  },
  "jest": {
    "setupFiles": [
      "./__tests__/setup/index.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/setup/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/fetch-mock": "^5.12.2",
    "@types/hls.js": "^0.7.7",
    "@types/jest": "^22.0.1",
    "@types/lodash": "^4.14.91",
    "@types/redux-mock-store": "^0.0.13",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "fetch-mock": "^6.0.0-beta.7",
    "if-env": "^1.0.0",
    "jest": "^22.1.1",
    "node-sass": "^4.7.2",
    "preact-cli": "^2.0.1",
    "preact-cli-lodash": "^1.1.0",
    "preact-cli-plugin-async": "^1.0.0",
    "preact-cli-plugin-critical-css": "0.0.2",
    "redux-mock-store": "^1.4.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "ts-jest": "^22.0.1",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.2",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "bulma": "^0.6.1",
    "hls.js": "^0.8.9",
    "preact": "^8.2.6",
    "preact-async-route": "^2.0.1",
    "preact-compat": "^3.17.0",
    "preact-redux": "^2.0.3",
    "preact-router": "^2.5.7",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-persist": "^5.4.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "typesafe-actions": "^1.1.2"
  }
}